@{
	ViewBag.Title = "Ajustes";
	var IPAdrress = (String)ViewData["IPAdrress"];
}

<div class="row align-items-center">

	<div class="col-md-8 ">
		<h2>Ajustes</h2>
		@using (Html.BeginForm("Ajustes", "Home", FormMethod.Post))
		{
			<form>
				<div class="form-group">
					<label>Servidor:</label>
					@Html.TextBox("txtIP", @IPAdrress, new { Class = "form-control", Type = "text", required ="true"})
				</div>
				<div class="form-group">
					<button class="btn btn-default">Conectarse</button>
				</div>
				<div NAME="buttonbar">
					<INPUT class="bg-primary" TYPE="button" VALUE="Atrás" onClick="history.back()">
				</div>
			</form>
		}
	</div>
</div>